@* Dedicated layout for the public login page so we don't affect Admin/User views *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sosyal YardÄ±m Kart Sistemi</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body.login-body { margin:0; }
        /* Ensure full centering */
        .login-page { justify-content:center; }
        .brand-badge { font-weight:600; letter-spacing:.5px; }
        .login-illustration { font-size:3rem; line-height:1; }
        .floating-shape { position:absolute; border-radius:50%; opacity:.15; animation:float 12s ease-in-out infinite; }
        .floating-shape.shape1 { width:180px; height:180px; top:5%; left:8%; background:#ffffff; }
        .floating-shape.shape2 { width:120px; height:120px; bottom:10%; right:12%; background:#000000; }
    .floating-shape.shape3 { width:90px; height:90px; top:60%; left:20%; background:#ffffff; }
    @@keyframes float { 0%,100% { transform:translateY(0); } 50% { transform:translateY(-25px); } }
        .credit-badge { font-size:.75rem; color:#888; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="login-body login-page">
    <div class="container py-5">
        @RenderBody()
    </div>
    <div class="floating-shape shape1"></div>
    <div class="floating-shape shape2"></div>
    <div class="floating-shape shape3"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required:false)
</body>
</html>
